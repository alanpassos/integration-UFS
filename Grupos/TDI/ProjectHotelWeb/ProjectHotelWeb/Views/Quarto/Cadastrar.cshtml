@model Dominio.Classes.Quarto

@{
    ViewBag.Title = "Cadastrar";
}
@using (Html.BeginForm("CadastrarQuarto","Quarto"))
{
    @Html.AntiForgeryToken()

        <center>
            <h3>Cadastrar Quarto</h3>
        </center>
        <hr />
    <br />
        <form class="col s12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">

                <div class="input-field col s0" style="display:none">

                    <input id="cadastrar_numero" type="text" class="validate">
                    <label for="first_name">Número</label>

                    @Html.EditorFor(model => model.idQuarto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.idQuarto, "", new { @class = "text-danger" })

                </div>

                <div class="input-field col s4">

                    <select name="Tipo">
                        <option value="" disabled selected>Selecione a opção</option>
                        @foreach (var tipo in ViewBag.Tipos)
                        {
                            <option value="@tipo.idTipoQuarto">@(tipo.descricao + ": R$ " + tipo.valor)</option>
                        }
                    </select>

                </div>

                <div class="input-field col s4">
                
                    <label for="first_name">Capacidade</label>
                        @Html.EditorFor(model => model.capacidade, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.capacidade, "", new { @class = "text-danger" })
                </div>

                <div class="input-field col s4">
                
                        <select name="Status">
                            <option value="L">  Livre  </option>
                            <option value="O">  Ocupado  </option>
                            <option value="R">  Requerido  </option>
                        </select>
                </div>

            </div>
            <div class="row">
                <div class="input-field col s8">
                    <label for="first_name">Descrição</label>

                    @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })

                </div>
                
            </div>
            <div class="row">

                <br />
                <div class="col s2">
                    @Html.ActionLink("Voltar", "Index")
                </div>
                <div class="col s2">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Salvar

                    </button>
                </div>

            </div>
        </form>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>