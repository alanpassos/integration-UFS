        /**
           * MASCARA ( mascara(o,f) e execmascara() ) CRIADAS POR ELCIO LUIZ
           * elcio.com.br
           */
        function mascara(o, f) {
            v_obj = o
            v_fun = f
            setTimeout("execmascara()", 1)
        }

        function execmascara() {
            v_obj.value = v_fun(v_obj.value)
        }

        function cpf_mask(v) {
            v = v.replace(/\D/g, "")                 //Remove tudo o que não é dígito
            v = v.replace(/(\d{3})(\d)/, "$1.$2")    //Coloca ponto entre o terceiro e o quarto dígitos
            v = v.replace(/(\d{3})(\d)/, "$1.$2")    //Coloca ponto entre o setimo e o oitava dígitos
            v = v.replace(/(\d{3})(\d)/, "$1-$2")   //Coloca ponto entre o decimoprimeiro e o decimosegundo dígitos
            return v
        }

        function cnpj_mask(v) {
            v = v.replace(/^(\d{2})(\d)/, "$1.$2")
            v = v.replace(/^(\d{2})\.(\d{3})(\d)/, "$1.$2.$3")
            v = v.replace(/\.(\d{3})(\d)/, ".$1/$2")
            v = v.replace(/(\d{4})(\d)/, "$1-$2")
            return v
        }

        function telefone_mask(v) {
            v = v.replace(/\D/g, "")
            v = v.replace(/(\d{2})(\d)/, "($1) $2")
            v = v.replace(/(\d{4})(\d)/, "$1-$2")
            return v
        }

        function cep_mask(v) {
            v = v.replace(/\D/g, "")
            v = v.replace(/(\d{5})(\d)/, "$1-$2")
            return v
        }
        function date_mask(v) {
            v = v.replace(/\D/g, "")
            v = v.replace(/(\d{2})(\d)/, "$1/$2")
            v = v.replace(/(\d{2})(\d)/, "$1/$2")


            return v
        }
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        // ação de saber qual elemento está xecado no formulário de checkin
        function ListarDisponivel() {
            $.ajax({
                type: 'GET', url: '/Home/QuartosLivres',
                dataType: 'html',
                cache: false,
                async: true,
                success:
                    function (data) {
                        $('#itemForm').html(data);
                    }
            });

        }


        function RealizarCheckin() {
            var tamanho = document.forms[0].elements.length;
            var selecionou = false;
            var valor = [];
            var index = 0;
            
            for (var i = 0; i < tamanho ; i++) {

                if (document.getElementById(document.forms[0].elements[i].id.toString()).checked) {
                    valor[index++] = document.forms[0].elements[i].id.toString();
                    selecionou = true;
                }
            }

            if (selecionou) {
                $.post("/Checkin/Checkin", { quartos: valor }, function (data) {
                    $("html").html(data);
                });
            } else {
                alert("Selecione uma hospedagem");
            }
        }



        function AdicionarItem() {
            var tamanho = document.forms[0].elements.length;
