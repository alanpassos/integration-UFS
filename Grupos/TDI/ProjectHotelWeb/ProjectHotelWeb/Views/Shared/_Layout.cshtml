        function RealizarCheckin() {
            var tamanho = document.forms[0].elements.length;
            var selecionou = false;
            var valor = [];
            var index = 0;

            for (var i = 0; i < tamanho ; i++) {

                if (document.getElementById(document.forms[0].elements[i].id.toString()).checked) {
                    valor[index++] = document.forms[0].elements[i].id.toString();
                    selecionou = true;
                }
            }

            if (selecionou) {
                var url = '@Url.Action("Checkin", "Checkin")?quartosSelect=' + valor;
                window.location.href = url;
               
            } else {
                alert("Selecione um ou mais quartos");
            }
        }
       
