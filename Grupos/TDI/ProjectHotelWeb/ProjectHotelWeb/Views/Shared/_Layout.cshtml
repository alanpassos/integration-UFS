        /**
           * MASCARA ( mascara(o,f) e execmascara() ) CRIADAS POR ELCIO LUIZ
           * elcio.com.br
           */
        function mascara(o, f) {
            v_obj = o
            v_fun = f
            setTimeout("execmascara()", 1)
        }

