@model Dominio.Classes.Item

@{
    ViewBag.Title = "Atualizar";
}

<h2>Atualizar</h2>


@using (Html.BeginForm("AtualizarItem","Item"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Item</h4>
        <hr />

        @{var hospedagem = @ViewBag.Hospedagem;}
        @{var cliente = @ViewBag.Cliente;}

        <div class="row">
            <div class="input-field col s6">
                <h5><b>Cliente: </b>  @cliente.nome</h5>
            </div>
            <div class="input-field col s6">
                <h5><b>Quarto: </b>  @hospedagem.Quarto.descricao</h5>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <h5><b>Nome do produto: </b>@Html.DisplayFor(model => model.Produto.descricao)</h5>
            </div>

        </div>

        <br>
        <br>
        <div class="row">
            <div class="input-field col s6">
                <label for="first_name">Quantidade</label>

                @Html.EditorFor(model => model.quantidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.quantidade, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <label for="first_name">Valor</label>

                @Html.EditorFor(model => model.valorTotal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.valorTotal, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class=" row">
            <div class="input-field col s10">
                @Html.ActionLink("Voltar", "Index")
            </div>

            <div class="input-field col s0">
                <input type="submit" value="Salvar" class="btn btn-default" />


            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
