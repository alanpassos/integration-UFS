@model Dominio.Classes.Quarto

@{
    ViewBag.Title = "Atualizar";
}

@using (Html.BeginForm("AtualizarCliente", "Quarto"))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <h4 class="center">Atualizar Quarto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form class="col s12">

                <div class="row">
                    <div class="input-field col s4">

                        <select id="tipoquarto" name="tipoquarto">

                            @foreach (var i in @ViewBag.TipoQuarto)
                            {
                                <option value="@i.idTipoQuarto" @(Model.idTipoQuarto == i.idTipoQuarto ? "selected=\"selected\"" : "")>
                                    @i.descricao
                                </option>

                            }
                        </select>
                        <label for="first_name">Tipo Quarto</label>
                    </div>


                    <div class="input-field col s8">

                            <label for="first_name">Descrição</label>
                            @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
                        
                    </div>

                </div>

                <div class="row">
                    <div class="input-field col s4">

                            <label for="first_name">Capacidade de hóspedagem</label>
                            @Html.EditorFor(model => model.capacidade, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.capacidade, "", new { @class = "text-danger" })
                        
                    </div>

                    <div class="input-field col s4">

                            <label for="first_name">Ativo</label>
                            <div class="checkbox">
                                @Html.EditorFor(model => model.ativo)
                                @Html.ValidationMessageFor(model => model.ativo, "", new { @class = "text-danger" })
                            </div>
                        
                    </div>

                    <div class="input-field col s4">

                            <label for="first_name">Status</label>

                            @Html.EditorFor(model => model.status.Equals("L"), new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                        
                    </div>

                </div>

                <div class="row">
                    
                    <div class="col s2">@Html.ActionLink("Voltar", "Index")</div>
                    <div class="col s2">
                        <button class="btn waves-effect waves-light" type="submit" name="action">
                            Salvar
                        </button>
                    </div>
                </div>
          </form>
    </div>
}


<script type="text/javascript" src="~/Content/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript" src="~/Content/js/materialize.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
