@model IEnumerable<Dominio.Classes.PacoteHospedagem>

@{
    ViewBag.Title = "Index";
}

<h2>Check-Out</h2>

<p>
    @Html.ActionLink("Cadastrar", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idPacoteHospedagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valorTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.observacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataLiberacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataEntrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataSaida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataCadastro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idPacoteHospedagem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valorTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.subTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.observacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataLiberacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataEntrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataSaida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataCadastro)
        </td>
        <td>
            @Html.ActionLink("Editar", "Atualizar", new { id=item.idPacoteHospedagem }) |
            @Html.ActionLink("Detalhar", "Detalhar", new { id = item.idPacoteHospedagem }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.idPacoteHospedagem })
        </td>
    </tr>
}

</table>
