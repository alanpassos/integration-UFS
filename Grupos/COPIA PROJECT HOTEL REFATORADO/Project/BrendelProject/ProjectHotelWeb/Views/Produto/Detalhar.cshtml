@model Dominio.Classes.Produto

@{
    ViewBag.Title = "Detalhar";
}

<h2>Detalhar</h2>

<div>
    <h4>Produto</h4>
    <hr />
    <div class="row">
        <div class="input-field col s4">
            <b>Código do produto: </b>  @Html.DisplayFor(model => model.idProduto)
        </div>
   
    </div>
    <div class="row">
        <div class="input-field col s4">
            <b>Tamanho: </b>  @Html.DisplayFor(model => model.tamanho)
        </div>
        <div class="input-field col s4">
            <b>Quantidade: </b>  @Html.DisplayFor(model => model.quantidade)
        </div>

      
    </div>
     <div class="row">
         <div class="input-field col s4">
             <b>Valor: </b>  @Html.DisplayFor(model => model.valor)
         </div>
     </div>

    <div class="row">
        <div class="input-field col s4">
            <b>Descrição: </b>  @Html.DisplayFor(model => model.descricao)
        </div>

        <div class="input-field col s4">
            <b>Observação: </b>  @Html.DisplayFor(model => model.observacao)
        </div>
    </div>

</div>
<p>

    <div class="row">
        <div class="input-field col s10">
            @Html.ActionLink("Editar", "Atualizar", new { id = Model.idProduto })
        </div>
        <div class="input-field col s0">
            @Html.ActionLink("Voltar", "Index")
        </div>
    </div>
</p>
